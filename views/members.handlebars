
<aside>
    <a href="#account-info" class="account-info">account info |</a>
    <a href="#user-recipes" class="user-recipes">my recipes |</a>
    <a href="#saved-recipes" class="saved-recipes">saved recipes |</a>
    <a href="/create-recipe" class="create-recipe">create a recipe</a>
</aside>
<main>

    <div id="membersWrapper">
        <div id="user-recipes">
            <h1><strong>My Recipes</strong></h1>
            <div>
                <table>
                    {{#each recipes}}
                    <tr>
                        <td><a href="/view-recipe/{{id}}">{{title}}</a></td>
                        {{!-- edit button in progress! --}}
                        {{!-- <td><button id="{{id}}" class="edit-recipe">edit</button></td> --}}
                        <td><button id="{{id}}" class="delete-recipe">delete</button></td>
                    </tr>
                    {{/each}}
                </table>
                
            </div>
        </div>
        <div id="saved-recipes">
            <h1><strong> Saved Recipes</strong></h1>
            <section>
                {{#if savedRecipes}}
                    <ul>
                        {{#each savedRecipes}}
                        <li>
                            <a href="/view-recipe/{{recipe_id}}">{{title}}</a>
                        </li>
                        {{/each}}
                    </ul>
                {{else}}
                    You have no saved recipes
                {{/if}}
            </section>
        </div>
    </div>
    <div id="account-info">
        <h1><strong> Account Info </strong> </h1>
        <div>
            <h3>Account Stats? (optional)</h3>
            <p>* number of created recipes</p>
            <p>* number of saved recipes</p>
            <p>* number of reviews</p>
            <p>* number of meals cooked?</p>
        </div>
    </div>

</main>

<script type="text/javascript" src="/js/members.js"></script>