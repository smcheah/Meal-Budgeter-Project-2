<div id="recipedetails">
    <h1>{{title}}</h1>
    <label>{{username}}</label>
    {{#each recipe}}
    <ul>Ingredients List

        <li>
            <span>Amount</span><span>{{this.measure_metric}}</span> <span>{{this.item}}</span>
        </li>

    </ul>
    {{/each}}
    <h2>Method</h2>
    <p>{{method}}</p>
    <img src="https://picsum.photos/250/150" alt="placeholder-image">
</div>

<script type="text/javascript" src="/js/view-recipe.js"></script>